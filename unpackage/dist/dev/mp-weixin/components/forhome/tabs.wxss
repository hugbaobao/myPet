.shaixuan {
  display: flex;
  align-items: center;
}
.shaixuan text {
  margin-right: 5px;
  font-size: 12px;
}
.mypop {
  padding-top: 200rpx;
}
.mypop .tabform .formitem {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 0 20rpx;
  margin-bottom: 20px;
}
.mypop .tabform .formitem text {
  margin-bottom: 10px;
  font-size: 15px;
}
.mypop .tabform .formitem .btncontent {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-start;
}
.mypop .tabform .formitem .btncontent button {
  border-radius: 15px;
  margin: 0 10px 8px 0;
}
.mypop .tabform .submit {
  margin: 40px 20px 0;
  height: 40px;
  line-height: 40px;
  border-radius: 20px;
}
.activebtn {
  background-color: #ff8810;
  color: #fff;
}

